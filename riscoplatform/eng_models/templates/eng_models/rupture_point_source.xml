<?xml version="1.0" encoding="utf-8"?>
<nrml xmlns:gml="http://www.opengis.net/gml" xmlns="http://openquake.org/xmlns/nrml/0.4">
	<rupture>
		<magnitude>{{rupture.mag}}</magnitude>
		<pointRupture>
			<strike>{{rupture.strike}}</strike>
			<rake>{{rupture.rake}}</rake>
			<dip>{{rupture.dip}}</dip>
			<hypocenterLocation>
				<gml:Point srsName="epsg:4326">
					<gml:pos>{{rupture.location.x}} {{rupture.location.y}}</gml:pos>
				</gml:Point>
			</hypocenterLocation>
		</pointRupture>
	</rupture>
</nrml>