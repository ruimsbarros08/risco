<?xml version="1.0" encoding="utf-8"?>
<nrml xmlns:gml="http://www.opengis.net/gml" xmlns="http://openquake.org/xmlns/nrml/0.4">
	<simpleFaultRupture>
		<magnitude>{{rupture.mag}}</magnitude>
		<rake>{{rupture.rake}}</rake>
		<hypocenter lat="{{rupture.location.y}}" lon="{{rupture.location.x}}" depth="{{rupture.depth}}"/>
		<simpleFaultGeometry>
			<gml:LineString>
				<gml:posList>
					{% for point in rupture.rupture_geom %}
						{% for coor in point %}

						{{coor}}

						{% endfor %}
					{% endfor %}
				</gml:posList>
			</gml:LineString>	
			<dip>{{rupture.dip}}</dip>
			<upperSeismoDepth>{{rupture.upper_depth}}</upperSeismoDepth>
			<lowerSeismoDepth>{{rupture.lower_depth}}</lowerSeismoDepth>
		</simpleFaultGeometry>
	</simpleFaultRupture>
</nrml>