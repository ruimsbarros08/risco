<?xml version="1.0" encoding="utf-8"?>
<nrml xmlns:gml="http://www.opengis.net/gml" xmlns="http://openquake.org/xmlns/nrml/0.4">
	<simpleFaultRupture>
		<magnitude>{{mag}}</magnitude>
		<rake>{{rake}}</rake>
		<hypocenter lat="{{lat}}" lon="{{lon}}" depth="{{depth}}"/>
		<simpleFaultGeometry>
			<gml:LineString>
				<gml:posList>
					{{faultTrace[0][0]}} {{faultTrace[0][1]}}
					{{faultTrace[1][0]}} {{faultTrace[1][1]}}
				</gml:posList>
			</gml:LineString>	
			<dip>{{dip}}</dip>
			<upperSeismoDepth>{{upperDepth}}</upperSeismoDepth>
			<lowerSeismoDepth>{{lowerDepth}}</lowerSeismoDepth>
		</simpleFaultGeometry>
	</simpleFaultRupture>
</nrml>